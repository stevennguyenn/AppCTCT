<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Test.ResultActivity"
    android:background="@color/bgShowResult">

    <android.support.constraint.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/background_corner"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"
        android:id="@+id/viewChildren"
        android:layout_width="0dp"
        android:layout_height="0dp">


    </android.support.constraint.ConstraintLayout>

    <fragment
        android:id="@+id/btShowResult"
        android:name="com.example.administrator.appctct.Fragment.FragmentButton.fragment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/viewChildren"
        app:layout_constraintStart_toStartOf="@+id/viewChildren"
        app:layout_constraintTop_toBottomOf="@+id/viewChildren" />

</android.support.constraint.ConstraintLayout>