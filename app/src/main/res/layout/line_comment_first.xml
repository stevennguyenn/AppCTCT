<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/producevalution"
        android:id="@+id/tvProductEvalution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:progressTint="@color/colorOrange"
        android:secondaryProgressTint="@color/colorOrange"
        android:id="@+id/rbRatioBookCommentFirst"
        android:layout_marginTop="2dp"
        android:scaleY="1"
        android:scaleX="1"
        android:transformPivotY="0dp"
        android:transformPivotX="0dp"
        android:numStars="5"
        android:rating="3"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintLeft_toLeftOf="@id/tvProductEvalution"
        app:layout_constraintTop_toBottomOf="@id/tvProductEvalution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvNumberRateCommentFirst"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/rbRatioBookCommentFirst"
        app:layout_constraintLeft_toRightOf="@id/rbRatioBookCommentFirst"
        android:text="@string/label"
        android:textSize="12sp"
        android:textColor="@color/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvNumberPersonCommentFirst"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/tvNumberRateCommentFirst"
        app:layout_constraintTop_toTopOf="@id/rbRatioBookCommentFirst"
        android:textSize="12sp"
        android:text="@string/label"
        android:textColor="@color/black_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imgRightCommentFirst"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/tvSeeAllCommentFirst"
        android:gravity="center"
        android:textColor="@color/colorOrange"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/seeall"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>