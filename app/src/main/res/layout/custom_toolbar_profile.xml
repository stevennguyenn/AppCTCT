<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/colorWhite">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/viewChildren"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:contentDescription="@string/follow"
                app:layout_constraintBottom_toBottomOf="@id/viewChildren"
                app:layout_constraintTop_toTopOf="@id/viewChildren"
                android:src="@drawable/ic_back"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <include
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintRight_toRightOf="@id/viewChildren"
                app:layout_constraintBottom_toBottomOf="@id/viewChildren"
                app:layout_constraintTop_toTopOf="@id/viewChildren"
                layout="@layout/button_follow"
                android:layout_height="30dp"
                android:layout_width="80dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>