<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:contentDescription="@string/label"
        android:id="@+id/imgIconNotificationIndividual"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_test"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/tvNameCourseIndividual"
        android:text="@string/label"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@id/imgIconNotificationIndividual"
        app:layout_constraintTop_toTopOf="@id/imgIconNotificationIndividual"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvPointIndividual"
        android:textSize="12sp"
        android:textColor="@color/black_overlay"
        android:textStyle="italic"
        android:text="@string/label"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNameCourseIndividual"
        app:layout_constraintLeft_toLeftOf="@id/tvNameCourseIndividual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imgIconNotificationIndividual"
        android:background="@color/black_overlay"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvPointIndividual"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/tvNoInformationIndividual"
        android:visibility="invisible"
        android:textColor="@color/black_overlay"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/noinformationindividual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>