<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:contentDescription="@string/label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/imgpdf"
        android:id="@+id/imgBook"
        android:layout_width="80dp"
        android:layout_height="100dp" />
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/label"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgBook"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@+id/imgBook"
        android:id="@+id/tvNameBook"
        android:layout_width="0dp"
        android:layout_height="16dp" />
    <TextView
        android:text="@string/label"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@id/tvNameBook"
        app:layout_constraintTop_toBottomOf="@id/tvNameBook"
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="14dp" />
    <TextView
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/black_overlay"
        android:text="@string/label"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvAuthor"
        app:layout_constraintLeft_toLeftOf="@id/tvAuthor"
        android:id="@+id/tvDateUpload"
        android:layout_width="wrap_content"
        android:layout_height="14dp" />
    <RatingBar
        android:progressTint="@color/colorOrange"
        android:secondaryProgressTint="@color/colorOrange"
        android:id="@+id/rbRatio"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center"
        android:numStars="5"
        android:rating="3"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintLeft_toLeftOf="@id/tvDateUpload"
        app:layout_constraintTop_toBottomOf="@id/tvDateUpload"
        android:layout_width="wrap_content"
        android:layout_height="15dp" />
    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</android.support.constraint.ConstraintLayout>