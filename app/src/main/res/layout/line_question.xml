<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/color_red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tvQuestion"
        android:text="@string/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorTextLogin"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/tvContentQuestion"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvQuestion"
        app:layout_constraintTop_toTopOf="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:button="@android:color/transparent"
        android:background="@drawable/custom_checkbox"
        android:id="@+id/rdQuestionA"
        app:layout_constraintTop_toTopOf="@id/tvQuestionA"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestion"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:textColor="@color/colorTextLogin"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/tvQuestionA"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/rdQuestionA"
        app:layout_constraintTop_toBottomOf="@+id/tvContentQuestion"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:button="@android:color/transparent"
        android:background="@drawable/custom_checkbox"
        android:id="@+id/rdQuestionB"
        app:layout_constraintTop_toTopOf="@id/tvQuestionB"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestion"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:textColor="@color/colorTextLogin"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/tvQuestionB"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestionA"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionA"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:button="@android:color/transparent"
        android:background="@drawable/custom_checkbox"
        android:id="@+id/rdQuestionC"
        app:layout_constraintTop_toTopOf="@id/tvQuestionC"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestion"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:textColor="@color/colorTextLogin"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/tvQuestionC"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestionB"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionB"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:button="@android:color/transparent"
        android:background="@drawable/custom_checkbox"
        android:id="@+id/rdQuestionD"
        app:layout_constraintTop_toTopOf="@id/tvQuestionD"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestion"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView
        android:textColor="@color/colorTextLogin"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/tvQuestionD"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/tvQuestionC"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionC"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestionD"
        android:id="@+id/cvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/label"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@id/cvResult"
            app:layout_constraintTop_toTopOf="@id/cvResult"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:id="@+id/tvResultTestTested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toRightOf="@id/cvResult"
            app:layout_constraintLeft_toLeftOf="@id/cvResult"
            android:contentDescription="@string/camera"
            android:src="@drawable/iconsearchwhite"
            android:id="@+id/imgText"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@id/cvResult"
            app:layout_constraintTop_toBottomOf="@+id/tvResultTestTested"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>