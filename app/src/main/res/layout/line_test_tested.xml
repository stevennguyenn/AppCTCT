<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/viewChildren"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/label"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintLeft_toLeftOf="@id/viewChildren"
                app:layout_constraintTop_toTopOf="@id/viewChildren"
                android:id="@+id/tvNumberTestTested"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="@string/label"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintRight_toRightOf="@id/viewChildren"
                app:layout_constraintLeft_toRightOf="@id/tvNumberTestTested"
                app:layout_constraintTop_toTopOf="@id/tvNumberTestTested"
                android:id="@+id/tvNameTestTested"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPointTestTested"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:text="@string/label"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/tvNameTestTested"
                app:layout_constraintTop_toBottomOf="@id/tvNameTestTested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/label"
                android:textColor="@color/black_overlay"
                android:textStyle="italic"
                android:textSize="13sp"
                android:id="@+id/tvRateTestTested"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/tvPointTestTested"
                app:layout_constraintTop_toBottomOf="@id/tvPointTestTested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imgNumberUserTestTest"
                android:scaleType= "fitXY"
                android:contentDescription="@string/label"
                android:src="@drawable/ic_number_user"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@id/viewChildren"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvRateTestTested"
                app:layout_constraintLeft_toLeftOf="@id/tvRateTestTested"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tvNumberUserTestTested"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@color/black_overlay"
                android:text="@string/label"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintLeft_toRightOf="@id/imgNumberUserTestTest"
                app:layout_constraintBottom_toBottomOf="@id/imgNumberUserTestTest"
                app:layout_constraintTop_toTopOf="@id/imgNumberUserTestTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    

</android.support.constraint.ConstraintLayout>