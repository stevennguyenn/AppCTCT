<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:scaleType="centerCrop"
        android:contentDescription="@string/label"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgAVTBook"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:text="@string/label"
        android:textColor="@color/color_red"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAVTBook"
        android:id="@+id/tvNameBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:progressTint="@color/colorOrange"
        android:secondaryProgressTint="@color/colorOrange"
        android:id="@+id/rbRatioBook"
        android:numStars="5"
        android:rating="3"
        android:layout_marginTop="5dp"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNameBook"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="15dp" />
    <TextView
        android:textStyle="italic"
        android:textSize="13sp"
        android:textColor="@color/black_overlay"
        android:text="@string/label"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@id/rbRatioBook"
        app:layout_constraintTop_toBottomOf="@id/tvNameBook"
        android:id="@+id/tvRatioBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvClickToSeeTheDocument"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/rbRatioBook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="italic"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/clicktoseethedocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>