<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:background="@color/dark_transparent"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imgBook"
        android:layout_width="80dp"
        android:layout_height="90dp" />
    <View
        android:background="@color/dark_transparent"
        android:id="@+id/tvNameBook"
        app:layout_constraintRight_toRightOf="@+id/imgBook"
        app:layout_constraintLeft_toLeftOf="@+id/imgBook"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imgBook"
        android:layout_width="0dp"
        android:layout_height="14dp" />
    <View
        android:background="@color/dark_transparent"
        android:id="@+id/tvRatio"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="@+id/imgBook"
        app:layout_constraintLeft_toLeftOf="@+id/imgBook"
        app:layout_constraintTop_toBottomOf="@+id/tvNameBook"
        android:layout_width="0dp"
        android:layout_height="14dp" />

</android.support.constraint.ConstraintLayout>