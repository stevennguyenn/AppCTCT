<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/childParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/imgpdf"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/childParent"
            app:layout_constraintTop_toTopOf="@id/childParent"
            android:id="@+id/imgBook"
            android:layout_width="80dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/tvNameBook"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="@id/imgBook"
            app:layout_constraintLeft_toLeftOf="@id/imgBook"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/imgBook"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvRatio"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            app:layout_constraintRight_toRightOf="@id/imgBook"
            app:layout_constraintLeft_toLeftOf="@id/imgBook"
            app:layout_constraintTop_toBottomOf="@id/tvNameBook"
            android:textColor="@color/black_overlay"
            android:textSize="11sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>