<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Profile.ProfileIndividual">
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_profile"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"/>
    <ScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/viewChildren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="@id/viewChildren"
                app:layout_constraintTop_toTopOf="@id/viewChildren"
                android:id="@+id/imgAvt"
                layout="@layout/avatar"/>
            <TextView
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/tvTitleName"
                app:layout_constraintRight_toRightOf="@id/viewChildren"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:text="@string/label"
                app:layout_constraintLeft_toRightOf="@id/imgAvt"
                app:layout_constraintTop_toTopOf="@id/imgAvt"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvTitleDetail"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:text="@string/label"
                app:layout_constraintRight_toRightOf="@id/tvTitleName"
                app:layout_constraintLeft_toLeftOf="@id/tvTitleName"
                app:layout_constraintTop_toBottomOf="@id/tvTitleName"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTitleEmail"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="@id/tvTitleDetail"
                app:layout_constraintTop_toBottomOf="@id/tvTitleDetail"
                app:layout_constraintLeft_toLeftOf="@id/tvTitleDetail"
                android:text="@string/label"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/colorPur"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/viewFollow"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitleEmail"
                app:layout_constraintRight_toRightOf="@id/tvTitleName"
                app:layout_constraintLeft_toLeftOf="@id/imgAvt"
                android:layout_width="0dp"
                android:layout_height="40dp">
                <include
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    layout="@layout/view_follow_profile"/>
                <include
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    layout="@layout/view_follow_profile"/>
                <include
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    layout="@layout/view_follow_profile"/>
                <include
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    layout="@layout/view_follow_profile"/>
            </LinearLayout>
            <View
                android:id="@+id/viewLine"
                android:background="@color/black_overoverlay"
                app:layout_constraintRight_toRightOf="@id/viewFollow"
                app:layout_constraintLeft_toLeftOf="@id/viewFollow"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/viewFollow"
                android:layout_width="0dp"
                android:layout_height="1dp"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="@id/viewLine"
                app:layout_constraintLeft_toLeftOf="@id/viewLine"
                app:layout_constraintTop_toBottomOf="@id/viewLine"
                android:layout_width="0dp"
                android:layout_height="40dp">
            </android.support.design.widget.TabLayout>

            <com.example.administrator.appctct.Component.Custom.WrapContentHeightViewPager
                android:background="@color/colorPur"
                android:id="@+id/viewPager"
                app:layout_constraintTop_toBottomOf="@id/tablayout"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="@id/tablayout"
                app:layout_constraintRight_toRightOf="@id/tablayout"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </com.example.administrator.appctct.Component.Custom.WrapContentHeightViewPager>
        </android.support.constraint.ConstraintLayout>


    </ScrollView>
</android.support.constraint.ConstraintLayout>