<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_navigation_view">
    <ImageView
        android:background="@drawable/circle"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/imgHeader"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/tvWelcome"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/imgHeader"
        app:layout_constraintTop_toTopOf="@id/imgHeader"
        android:text="@string/welcometoctct"
        android:textSize="14sp"
        android:textColor="@color/colorWhite"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/tvWelcome"
        android:text="NNC"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        android:id="@+id/tvNameUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tvNameUser"
        android:textColor="@color/color_yellow"
        android:textStyle="italic"
        android:textSize="14sp"
        android:text="150 points"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvNameUser"
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>