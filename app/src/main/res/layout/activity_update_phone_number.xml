<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Setting.UpdatePhoneNumberActivity"
    android:background="@color/colorWhite">

    <fragment
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/fragCurrentPhoneNumber"
        android:name="com.example.administrator.appctct.Fragment.EditText.fragment_edittext_changepassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <fragment
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragCurrentPhoneNumber"
        android:id="@+id/fragNewPhoneNumber"
        android:name="com.example.administrator.appctct.Fragment.EditText.fragment_edittext_changepassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor = "@color/colorPrimaryDark"
        android:id="@+id/tvConfirmCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/fragNewPhoneNumber"
        android:text="@string/confirmphonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <fragment
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConfirmCode"
        android:id="@+id/codePhoneNumber"
        android:name="com.example.administrator.appctct.Fragment.EditText.fragment_edittext_changepassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <fragment
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codePhoneNumber"
        android:id="@+id/fragConfirm"
        android:name="com.example.administrator.appctct.Fragment.EditText.FragmentButton.fragment_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>