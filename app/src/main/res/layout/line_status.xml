<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/viewChildren"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/black_overlay"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="@string/label"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="@id/viewChildren"
                app:layout_constraintLeft_toLeftOf="@id/viewChildren"
                app:layout_constraintTop_toTopOf="@id/viewChildren"
                android:id="@+id/tvDateStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:contentDescription="@string/label"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_more_choice"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="@id/viewChildren"
                app:layout_constraintBottom_toBottomOf="@id/tvDateStatus"
                app:layout_constraintTop_toTopOf="@id/tvDateStatus"
                android:id="@+id/imgIconPlus"
                android:layout_width="20dp"
                android:layout_height="10dp" />
            <TextView
                android:gravity="start"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="@string/label"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="@id/imgIconPlus"
                app:layout_constraintLeft_toLeftOf="@id/tvDateStatus"
                app:layout_constraintTop_toBottomOf="@id/tvDateStatus"
                android:id="@+id/tvContentStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imgStatus"
                android:background="@color/black"
                android:contentDescription="@string/label"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@id/viewChildren"
                android:scaleType="fitCenter"
                app:layout_constraintRight_toRightOf="@id/tvContentStatus"
                app:layout_constraintLeft_toLeftOf="@id/tvContentStatus"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvContentStatus"
                android:src="@drawable/imgpdf"
                android:layout_width="0dp"
                android:layout_height="250dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>