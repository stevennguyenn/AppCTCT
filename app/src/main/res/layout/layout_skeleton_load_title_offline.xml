<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/viewChildren"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/viewFirst"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/light_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/viewChildren"
        app:layout_constraintLeft_toLeftOf="@+id/viewChildren"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@+id/viewChildren"
        android:layout_width="40dp"
        android:layout_height="10dp"/>
    <View
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_transparent"
        app:layout_constraintLeft_toRightOf="@id/viewFirst"
        app:layout_constraintRight_toRightOf="@+id/viewChildren"
        app:layout_constraintBottom_toBottomOf="@+id/viewChildren"
        app:layout_constraintTop_toTopOf="@+id/viewChildren"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginBottom="20dp"/>
</android.support.constraint.ConstraintLayout>